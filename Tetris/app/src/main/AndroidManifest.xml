<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tetris.shapes">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        tools:node="merge" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.tetris.activities.MainActivity" />
        <activity android:name="com.example.tetris.activities.SecondPage" />
        <activity
            android:name="com.example.tetris.activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.tetris.activities.RegisterAccount"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.tetris.activities.Homepage"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.tetris.activities.Tetris" />
        <activity
            android:name="com.example.tetris.activities.Custom"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.tetris.activities.ManageProfile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.tetris.activities.ChangePassword"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>